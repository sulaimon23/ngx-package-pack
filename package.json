{
    "name": "@sulaimon23/ngx-package-pack",
    "version": "0.0.0",
    "description": "An Angular library NPM starter (or example) project to ease setup of Angular libraries as NPM packages from your GitHub repo",
    "scripts": {
        "clean": "rm -rf ./dist",
        "ng": "ng",
        "start": "ng serve",
        "build": "npm run clean && ng build ngx-lib",
        "watch": "ng build --watch --configuration development",
        "prepack": "npm run build",
        "test": "ng test ngx-lib",
        "prepare": "husky install"
    },
    "repository": "https://github.com/sulaimon23/ngx-package-pack.git",
    "keywords": [
        "typescript",
        "angular"
    ],
    "author": "@sulaimon23",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/sulaimon23/ngx-package-pack/utils/issues"
    },
    "homepage": "https://github.com/sulaimon23/ngx-package-pack/utils#readme",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/",
        "access": "public"
    },
    "files": [
        "dist/**/*"
    ],
    "dependencies": {
        "@angular/animations": "^15.0.4",
        "@angular/cdk": "^15.0.3",
        "@angular/common": "^15.0.4",
        "@angular/compiler": "^15.0.4",
        "@angular/core": "^15.0.4",
        "@angular/forms": "^15.0.4",
        "@angular/material": "^15.0.3",
        "@angular/platform-browser": "^15.0.4",
        "@angular/platform-browser-dynamic": "^15.0.4",
        "@angular/router": "^15.0.4",
        "rxjs": "~7.5.0",
        "tslib": "^2.3.0",
        "zone.js": "~0.11.4"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^15.0.5",
        "@angular/cli": "^15.0.5",
        "@angular/compiler-cli": "^15.0.4",
        "@commitlint/cli": "^17.3.0",
        "@commitlint/config-conventional": "^17.3.0",
        "@types/jasmine": "~3.10.0",
        "@types/node": "^12.11.1",
        "husky": "^8.0.2",
        "jasmine-core": "~4.0.0",
        "karma": "~6.3.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage": "~2.1.0",
        "karma-jasmine": "~4.0.0",
        "karma-jasmine-html-reporter": "~1.7.0",
        "ng-packagr": "^15.0.3",
        "typescript": "~4.8.4"
    },
    "release": {
        "branches": [
            "main",
            "next"
        ]
    }
}
